<h3>Task</h3>
<h1><%= @task.title %></h1>

<p><%= @task.description %></p>

<p>
  <strong>Creator:</strong>
  <%= @task.user.full_name %>
</p>

<% if @task.assignee.present? %>
  <p>
    <strong>Assigned to:</strong>
    <%= @task.assignee.full_name %>
  </p>
<% end %>

<p>
  <strong>Due at:</strong>
  <%= @task.due_at.strftime("%d %B %Y") %>
</p>

<% if @task.completed_at.present? %>
  <p>
    <strong>Completed at:</strong>
    <%= @task.completed_at.strftime("%d %B %Y") %>
  </p>
<% end %>

<% if @task.completer.present? %>
  <p>
    <strong>Completed by:</strong>
    <%= @task.completer.full_name %>
  </p>
<% end %>

<% if @task.restricted %><p>
  <p>This is a private task.</p>
<% end %>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>

