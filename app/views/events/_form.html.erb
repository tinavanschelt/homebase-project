<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :organiser_id, value: current_user.id %>

  <div class="field field--datetime">
    <%= form.label :date %>
    <div class="field--datetime__inner">
      <%= form.datetime_select :date %>
    </div>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field field--datetime">
    <%= form.label :start_time %>
    <div class="field--datetime__inner">
      <%= form.datetime_select :start_time %>
    </div>
  </div>

  <div class="field field--datetime">
    <%= form.label :end_time %>
    <div class="field--datetime__inner">
      <%= form.datetime_select :end_time %>
    </div>
  </div>
  
  <%= form.label :all_day, class: "field field--checkbox" do %>
    <%= form.check_box :all_day %>
    All day event
  <% end %>

  <%= form.label :restricted, class: "field field--checkbox" do %>
    <%= form.check_box :restricted %>
    Restricted event
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
