<% end %>

<div class="section">
  <h4 class="section__title">Events</h4>
  <% if @events.length > 0 %>
    nil
  <% else %>
    This group does not have any events
  <% end %>
  <%= link_to "Create New Event", new_event_path %>
</div>

<div class="section">
